{
  "name": "light-join",
  "version": "1.0.1",
  "description": "Join urls or paths into single path",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "webpack --config webpack.config.ts --env=prod",
    "postbuild": "yarn gen-declarations",
    "prebuild:dev": "tsc --noEmit",
    "build:dev": "webpack --config webpack.config.ts",
    "gen-declarations": "tsc --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hakobpogh/light-join.git"
  },
  "keywords": [
    "url",
    "join",
    "path",
    "light",
    "url",
    "join",
    "bundlephobia"
  ],
  "author": "hakobpogh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hakobpogh/light-join/issues"
  },
  "homepage": "https://github.com/hakobpogh/light-join",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/webpack": "^5.28.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "babel-loader": "^8.2.2"
  }
}
